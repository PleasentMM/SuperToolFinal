<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mcc.supertime">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/life_red"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/life_red"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash.SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <activity android:name=".AlarmClock.AlarmActivity"></activity>

        <activity android:name=".CirCleTimerView.CircleTimerActivity"></activity>

        <activity
            android:name=".BigClock.BigClockActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_big_clock"
            android:theme="@style/FullscreenTheme" />

        <activity android:name=".NoteBook.noteEdit" />

        <activity android:name=".CashBook.cashEdit" />

    </application>

</manifest>